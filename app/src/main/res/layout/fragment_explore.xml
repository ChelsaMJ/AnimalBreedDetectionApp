<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_explore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/ll_explore_root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_explore_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find the best breed for your environment"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp" />

        <!-- Input card -->
        <LinearLayout
            android:id="@+id/card_inputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="@drawable/home_card_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferred Type"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/et_animal_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type animal (e.g. dog, cat, tarantula, fish)"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="10dp"/>


            <!-- Preferred size -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferred size"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/sp_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginTop="6dp"/>

            <!-- Coat -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coat type"
                android:layout_marginTop="12dp"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/sp_coat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginTop="6dp"/>

            <!-- Activity -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity level"
                android:layout_marginTop="12dp"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/sp_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginTop="6dp"/>

            <!-- Environmental factors header -->
            <TextView
                android:id="@+id/tv_env_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Environmental factors"
                android:textStyle="bold"
                android:layout_marginTop="14dp"
                android:textSize="15sp" />

            <!-- Climate -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Climate"
                android:layout_marginTop="8dp"/>

            <Spinner
                android:id="@+id/sp_climate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginTop="6dp"/>

            <!-- Living space -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Living space"
                android:layout_marginTop="12dp"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/sp_living_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginTop="6dp"/>

            <!-- Allergies switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tv_allergies"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Any household allergies?" />

                <Switch
                    android:id="@+id/switch_allergies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Noise sensitivity -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noise sensitivity"
                android:layout_marginTop="12dp"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/sp_noise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginTop="6dp"/>

            <!-- Price slider (SeekBar) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maximum monthly cost (approx.)"
                android:layout_marginTop="12dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <SeekBar
                    android:id="@+id/seek_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:max="10000"
                    android:progress="5000"
                    />

                <TextView
                    android:id="@+id/tv_price_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="â‚¹5,000" />
            </LinearLayout>

        </LinearLayout>

        <!-- Find breeds button -->
        <Button
            android:id="@+id/btn_find_breeds"
            android:text="Find Breeds"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/pink"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
