<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_scan_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Scanning Result"
            android:textColor="#2E1E5B"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Main Result Card -->
        <LinearLayout
            android:id="@+id/card_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/home_card_bg"
            android:elevation="6dp">

            <!-- Centered Image -->
            <ImageView
                android:id="@+id/img_main"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_bg"
                android:layout_marginBottom="10dp" />

            <!-- Breed Name -->
            <TextView
                android:id="@+id/tv_main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breed Name"
                android:fontFamily="@font/abril_fatface"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E1E5B" />

            <!-- Description -->
            <TextView
                android:id="@+id/tv_main_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="10dp"
                android:ellipsize="none"
                android:fontFamily="@font/acme"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:scrollHorizontally="false"
                android:text="Detected breed details will appear here."
                android:textAlignment="viewStart"
                android:textColor="#6A5D7B"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Share"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#000000"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_rescan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Rescan"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/pink"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
