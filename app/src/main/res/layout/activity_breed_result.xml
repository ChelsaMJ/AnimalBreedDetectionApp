<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FBF7FB"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_scan_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanning Result"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2E1E5B"
            android:layout_marginTop="6dp" />

        <!-- Result card -->
        <LinearLayout
            android:id="@+id/card_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/home_card_bg"
            android:elevation="6dp">

            <!-- Centered image -->
            <ImageView
                android:id="@+id/img_main"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:src="@drawable/placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_bg"
                android:layout_marginBottom="10dp" />

            <!-- Breed Name -->
            <TextView
                android:id="@+id/tv_main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breed Name"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E1E5B"
                android:layout_marginTop="6dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/tv_main_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breed description will appear here neatly wrapped and aligned."
                android:textSize="14sp"
                android:textColor="#6A5D7B"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="4dp"
                android:ellipsize="end"
                android:maxLines="6" />

        </LinearLayout>

        <!-- ðŸ”¹ Smaller detected breed cards (dynamic list) -->
        <LinearLayout
            android:id="@+id/ll_breed_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle"
            android:dividerPadding="8dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Share"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#000000"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_rescan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Rescan"
                android:layout_marginStart="8dp"
                android:backgroundTint="#6C4DC8"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
